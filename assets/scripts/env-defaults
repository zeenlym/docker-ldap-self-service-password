#!/bin/sh

DEBUG=${DEBUG:-$DEBUG_ENTRYPOINT}


## GENERAL
SERVER_HOSTNAME=${SERVER_HOSTNAME:-$HOSTNAME}

## LDAP
LDAP_HOST=${LDAP_HOST:-ldap}
LDAP_PORT=${LDAP_PORT:-389}
LDAP_BASE=${LDAP_BASE:-example.com}
if [ -z ${LDAP_USER} ] ; then LDAP_USER="cn=admin,${LDAP_BASE}"; fi
LDAP_PASS=${LDAP_PASS:-admin}

## MAIL
SMTP_HOST=${SMTP_HOST:-smtp}
SMTP_PORT=${SMTP_PORT:-25}
SMTP_USER=${SMTP_USER:-}
SMTP_PASS=${SMTP_PASS:-}
SMTP_FROM=${SMTP_FROM:-root@$ERVER_HOSTNAME}
SMTP_TLS=${SMTP_TLS:-off}
SMTP_TYPE=${SMTP_TYPE:-noauth}

## LDAP-SSP
LSSP_MAIL_SUPPORT=false
LSSP_ATTR_LOGIN=${LSSP_ATTR_LOGIN:-uid}
LSSP_ATTR_FN=${LSSP_ATTR_FN:-cn}
LSSP_ATTR_MAIL=${LSSP_ATTR_MAIL:-mail}
LSSP_HASH_METHOD=${LSSP_HASH_METHOD:-auto}
LSSP_DEFAULT_ACTION=${LSSP_DEFAULT_ACTION:-change}

## reCAPTCHA
RECAPTCHA_USE=${RECAPTCHA_USE:-false};
RECAPTCHA_PUB_KEY=${RECAPTCHA_PUB_KEY};
RECAPTCHA_PRV_KEY=${RECAPTCHA_PRV_KEY};
RECAPTCHA_THEME=${RECAPTCHA_THEME:-white};
RECAPTCHA_SSL=${RECAPTCHA_USE:-false};

